<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText,SpUsage">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/layout_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom">
        <!--会员内容-->
        <RelativeLayout
            android:id="@+id/rl_vip_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_mine_vip_bg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_crown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:src="@drawable/ic_vip_crown2" />

            <TextView
                android:id="@+id/tv_vip_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_toEndOf="@id/iv_crown"
                android:text="会员中心"
                android:textColor="@color/color_533e29"
                android:textSize="@dimen/dp_15" />

            <TextView
                android:id="@+id/tv_vip_equity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="@drawable/shape_vip_equity_bg"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_5"
                android:paddingEnd="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_5"
                android:text="了解会员权益"
                android:textColor="@color/color_99612e"
                android:textSize="@dimen/dp_10" />


        </RelativeLayout>
        <!--个人资料-->
        <RelativeLayout
            android:id="@+id/rl_personal_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/rl_vip_view"
            android:background="@color/color_black_22">


            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:text="消愁918169"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_18" />

            <RelativeLayout
                android:id="@+id/rl_user_sex_bg"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_alignTop="@id/tv_nickname"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_toEndOf="@id/tv_nickname"
                android:background="@drawable/shape_mine_men_bg">

                <ImageView
                    android:id="@+id/iv_user_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_man" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_mine_signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_nickname"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="@string/str_mine_signature"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_12" />


            <TextView
                android:id="@+id/tv_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_mine_signature"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:text="0获赞"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_12" />

            <TextView
                android:id="@+id/tv_attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_mine_signature"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_toEndOf="@id/tv_like_count"
                android:text="0关注"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_12" />

            <TextView
                android:id="@+id/tv_fans_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_mine_signature"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_toEndOf="@id/tv_attention"
                android:text="0粉丝"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_12" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:src="@drawable/ic_right_arrow" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_65"
            android:layout_above="@id/rl_personal_data"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15" />

    </RelativeLayout>
</layout>

