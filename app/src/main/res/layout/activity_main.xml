<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.module_main.activity.MainActivity">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fra_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" />


        <LinearLayout
            android:id="@+id/lin_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/metting_tc_bg"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_15">

            <com.outrank.global.view.BottomAnimView
                android:id="@+id/bv_index"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:default_image="@drawable/ic_square"
                app:default_text="广场" />


            <com.outrank.global.view.BottomAnimView
                android:id="@+id/bv_choiceness"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:default_image="@drawable/ic_dynamic"
                app:default_text="精选" />

            <com.outrank.global.view.BottomAnimView
                android:id="@+id/bv_classify"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:default_image="@drawable/ic_write"
                app:default_text="创作" />


            <com.outrank.global.view.BottomAnimView
                android:id="@+id/bv_shopping"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:default_image="@drawable/ic_message"
                app:default_text="消息" />

            <com.outrank.global.view.BottomAnimView
                android:id="@+id/bv_mine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:default_image="@drawable/ic_mine"
                app:default_text="我的" />

        </LinearLayout>
    </LinearLayout>
</layout>